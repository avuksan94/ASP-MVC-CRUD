@model IEnumerable<PPPKZadatak03.Models.Poster>

@{
    ViewData["Title"] = "Posters Index";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Add New Poster</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Poster Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Content" alt="Poster Image" class="img-fluid rounded" style="max-height: 150px;">
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PosterId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.PosterId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <br>
    <br>
</div>
